{$R *.dfm}
procedure CreateUrunForm;
begin
  with TFrmUrun.Create(Application) do
  begin
    caption:=name;
    show;
  end;
end;

procedure TFrmUrun.BitBtn2Click(Sender: TObject);
begin
if Application.MessageBox('Çýkmak istiyor musunuz','Uyarý',MB_YesNoCancel+32)=IdYes then close;
end;

